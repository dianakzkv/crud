Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  <section>
    <div class='form'>
      <h1 class='form__title'>Create user</h1>
      <form method='POST' action='/user-create'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='email' class='form__label'>Email
              address:</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>

          <div class='form__field'>
            <label
              for='login'
              class='form__label'
            >Login:</label>
            <input
              type='login'
              name='login'
              class='form__input'
            />
          </div>

          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Password:</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>

          <button class='form__button'>Add user</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>List of users</h1>
	  <div class="user-list">
		{{#with data.users}}
			{{#if isEmpty}}
			<mark>List of users is empty</mark>
			{{else}}
			<ul>
				{{#each list}}
				<li>{{email}} | {{login}} | {{id}} <a href="/user-delete?id={{id}}">(delete user)</a></a></li>
				{{/each}}
			</ul>
			{{/if}}
		{{/with}}
	  </div>
    </div>
  </section>


  <section>
    <div class='form'>
      <h1 class='form__title'>Update user email</h1>
      <form method='POST' action='/user-update'>
        <div class='form__content'>
			<div class='form__field'>
            <label
              for='login'
              class='form__label'
            >ID:</label>
            <input
              type='login'
              name='login'
              class='form__input'
            />
          	</div>

          <div class='form__field'>
            <label for='email' class='form__label'>New email
              address:</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>

          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Password:</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>

          <button class='form__button'>Update email</button>
        </div>
      </form>
    </div>
  </section>
</main>

